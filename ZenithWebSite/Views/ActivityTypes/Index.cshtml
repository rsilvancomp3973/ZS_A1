@model IEnumerable<ZenithDataLib.Models.ActivityType>

@{
    ViewBag.Title = "Zenith Society: Activity Lookup Table"; }

<h2 class="text-center text-info" style= "margin-bottom: 25px;">@ViewBag.Title</h2>

<h4 class="text-center" style= "margin-bottom: 25px;">
    @Html.ActionLink("Create New", "Create")
</h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ActivityDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ActivityTypeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ActivityTypeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ActivityTypeId })
        </td>
    </tr>
}

</table>
